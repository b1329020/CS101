#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct employee {
    char name[50];
    int age;
    float salary;
} employee_t;

void emp_info(employee_t emp) {
    printf("Name: %s, Age: %d, Salary: %.2f\n", emp.name, emp.age, emp.salary);
}

void emp_writefile(employee_t emp[], int n) {
    FILE *fp = fopen("employee.bin", "wb");
    if (fp == NULL) {
        perror("Failed to open file");
        return;
    }
    fwrite(emp, sizeof(employee_t), n, fp);
    fclose(fp);
}

void emp_readfile(employee_t emp[], int n) {
    FILE *fp = fopen("employee.bin", "rb");
    if (fp == NULL) {
        perror("Failed to open file");
        return;
    }
    fread(emp, sizeof(employee_t), n, fp);
    fclose(fp);

    printf("Employee Data from File:\n");
    for (int i = 0; i < n; i++) {
        emp_info(emp[i]);
    }
}

int main() {
    employee_t employees[2] = {
        {"Alice", 30, 50000.0},
        {"Bob", 25, 45000.0}
    };

    emp_writefile(employees, 2);

    employee_t read_employees[2];
    emp_readfile(read_employees, 2);

    return 0;
}
